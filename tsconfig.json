{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "esnext.array",
      "esnext",
      "es2018",
      "es2017",
      "dom"
    ],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "assets": [
    "assets/**/*"
  ]
}
